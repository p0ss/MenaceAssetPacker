<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Menace.Modkit.App.Controls.ConfirmationDialog">
  <Border Background="#1E1E1E" BorderBrush="#2D2D2D" BorderThickness="1"
          CornerRadius="8" Padding="24" MaxWidth="400" MinWidth="320">
    <StackPanel Spacing="16">
      <TextBlock x:Name="TitleText" FontSize="18" FontWeight="SemiBold"
                 Foreground="White" Margin="0"/>
      <TextBlock x:Name="MessageText" FontSize="13" TextWrapping="Wrap"
                 Foreground="#AAAAAA"/>
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"
                  Spacing="8" Margin="0,8,0,0">
        <Button x:Name="CancelButton" Content="Cancel"
                Background="#2A2A2A" Foreground="White"
                BorderBrush="#3E3E3E" BorderThickness="1"
                Padding="12,8" CornerRadius="4"/>
        <Button x:Name="ConfirmButton" Content="Delete"
                Background="#7f1d1d" Foreground="White"
                BorderThickness="0" FontWeight="SemiBold"
                Padding="12,8" CornerRadius="4"/>
      </StackPanel>
    </StackPanel>
  </Border>
</UserControl>
